<div class="navbar navbar-expand-sm navbar-dc">
  <div class="d-flex justify-content-between w-100 mx-3">
    <div class="d-flex align-items-center">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "DigitalCompass logo wine.png" %>
      <% end %>
      <div class="logo-text">
        <p>DIGITAL</p>
        <p>COMPASS</p>
      </div>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="nav-links d-flex align-items-center">
      <% if user_signed_in? %>
        <% if current_user.recommendations.empty? %>
          <button class="button-pri mx-4"><%= link_to "Take the quiz", assessment_path %></button>
        <% end %>
        <%= link_to "Explore Pathways", pathways_path, class: "mx-4" %>
        <%= link_to "Dashboard", dashboard_path, class: "mx-4" %>
        <%= link_to destroy_user_session_path, data: { "turbo-method": :delete }, class: "mx-4" do %>
          <i class="fa-solid fa-arrow-right-from-bracket"></i>
        <% end %>
      <% else %>
        <button class="button-pri mx-4"><%= link_to "Sign Up", new_user_registration_path %></button>
        <button class="button-sec mx-4"><%= link_to "Log In", new_user_session_path %></button>
      <% end %>
    </div>
  </div>
</div>
