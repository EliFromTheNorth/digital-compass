<div class="dashboard-page">

  <div class="dashboard-content">
    <div class="dashboard-header my-5">
      <div class="dashboard-heading">
        <h2>Dashboard</h2>
      </div>

    <% unless current_user.recommendations.empty? %>
      <div class="dashboard-header-button">
        <div class="button-pri button-pri-dashboard">
          <%= link_to "Retake the quiz", assessment_path %>
        </div>
       </div>
    <% end %>

      </div>

    <div class="tabs-content">
      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <button class="nav-link <%= "active" if params[:tab].nil? %>" id="nav-overview-tab" data-bs-toggle="tab" data-bs-target="#nav-overview" type="button" role="tab" aria-controls="nav-overview" aria-selected="true">Overview</button>
          <button class="nav-link <%= "active" if params[:tab] == 'Skills' %>" id="nav-skills-tab" data-bs-toggle="tab" data-bs-target="#nav-skills" type="button" role="tab" aria-controls="nav-skills" aria-selected="false">Skills</button>
          <button class="nav-link <%= "active" if params[:tab] == 'Values' %>" id="nav-values-tab" data-bs-toggle="tab" data-bs-target="#nav-values" type="button" role="tab" aria-controls="nav-values" aria-selected="false">Values</button>
        </div>
      </nav>

      <div class="tab-content" id="nav-tabContent">

        <div class="tab-pane fade  <%= "show active" if params[:tab].nil? %>" id="nav-overview" role="tabpanel" aria-labelledby="nav-overview-tab">
          <%= render "dashboards/overviewtab" %>
        </div>

        <div class="tab-pane fade <%= "show active" if params[:tab] == 'Skills' %>" id="nav-skills" role="tabpanel" aria-labelledby="nav-skills-tab">
          <%= render "dashboards/skillstab" %>
        </div>

        <div class="tab-pane fade <%= "show active" if params[:tab] == 'Values' %>" id="nav-values" role="tabpanel" aria-labelledby="nav-values-tab">
          <%= render "dashboards/valuestab" %>
        </div>

      </div>
    </div>
  </div>
</div>
